---
// Animation.astro - Componente para animaciones con AOS
export interface Props {
  animation?: string;
  duration?: number;
  delay?: number;
  once?: boolean;
  className?: string;
}

const { 
  animation = 'fade-up', 
  duration = 800, 
  delay = 0, 
  once = true, 
  className = '' 
} = Astro.props;
---

<div 
  data-aos={animation}
  data-aos-duration={duration}
  data-aos-delay={delay}
  data-aos-once={once}
  class={className}
>
  <slot />
</div>