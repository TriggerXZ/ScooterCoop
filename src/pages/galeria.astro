---
import Layout from "../layouts/Layout.astro";
import Animation from "../components/Animation.astro";
---

<Layout
  title="Galería"
  description="Galería de fotos de nuestros scooters eléctricos y experiencias en el Malecón de Barranquilla"
>
  <script src="../scripts/gallery-lightbox.js"></script>

  <!-- Hero Section -->
  <section class="relative overflow-hidden py-24 bg-dark">
    <!-- Fondo Dinámico -->
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-accent/10 via-dark to-dark opacity-40"
    >
    </div>
    <div
      class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5 bg-[length:40px_40px]"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10 text-center">
      <Animation animation="fade-down">
        <h1
          class="text-4xl md:text-6xl font-bold mb-6 text-white tracking-tight"
        >
          Galería <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-secondary"
            >Futurista</span
          >
        </h1>
      </Animation>
      <Animation animation="fade-up" delay={200}>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto font-light">
          Explora la fusión entre tecnología y movilidad en el Malecón.
        </p>
      </Animation>
    </div>
  </section>

  <!-- Gallery Categories -->
  <section class="py-8 bg-dark border-b border-white/5">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-4">
        <button
          class="group relative px-8 py-3 rounded-none bg-transparent overflow-hidden transition-all hover:text-dark"
        >
          <span
            class="absolute inset-0 w-full h-full bg-primary/10 group-hover:bg-primary transition-all duration-300 skew-x-12"
          ></span>
          <span
            class="relative font-bold text-primary group-hover:text-dark tracking-widest uppercase text-sm"
            >Todos</span
          >
          <span
            class="absolute bottom-0 left-0 w-full h-[2px] bg-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"
          ></span>
        </button>

        <button
          class="group relative px-8 py-3 rounded-none bg-transparent overflow-hidden transition-all"
        >
          <span
            class="absolute inset-0 w-full h-full bg-white/5 group-hover:bg-white/10 transition-all duration-300 skew-x-12"
          ></span>
          <span
            class="relative font-bold text-gray-400 group-hover:text-white tracking-widest uppercase text-sm"
            >Scooters</span
          >
        </button>

        <button
          class="group relative px-8 py-3 rounded-none bg-transparent overflow-hidden transition-all"
        >
          <span
            class="absolute inset-0 w-full h-full bg-white/5 group-hover:bg-white/10 transition-all duration-300 skew-x-12"
          ></span>
          <span
            class="relative font-bold text-gray-400 group-hover:text-white tracking-widest uppercase text-sm"
            >Malecón</span
          >
        </button>

        <button
          class="group relative px-8 py-3 rounded-none bg-transparent overflow-hidden transition-all"
        >
          <span
            class="absolute inset-0 w-full h-full bg-white/5 group-hover:bg-white/10 transition-all duration-300 skew-x-12"
          ></span>
          <span
            class="relative font-bold text-gray-400 group-hover:text-white tracking-widest uppercase text-sm"
            >Experiencias</span
          >
        </button>
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 bg-dark min-h-screen">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
