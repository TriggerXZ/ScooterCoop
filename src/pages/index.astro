---
import Layout from '../layouts/Layout.astro';
import Animation from '../components/Animation.astro';
---

<Layout title="Inicio" description="Alquiler de scooters eléctricos en el Malecón de Barranquilla - Explora con estilo y comodidad">
  <!-- Hero Section con efecto parallax y formas orgánicas ultra-modernas 2025+ -->
  <section class="relative overflow-hidden min-h-[92vh] flex items-center justify-center">
    <!-- Fondo con gradiente mejorado y efecto parallax avanzado -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary via-secondary to-dark-blue">
      <!-- Malla de puntos decorativa con efecto de profundidad mejorado -->
      <div class="absolute inset-0 opacity-15" style="background-image: radial-gradient(circle, rgba(255,255,255,0.9) 1px, transparent 1px); background-size: 35px 35px;"></div>
      
      <!-- Efecto de luz ambiental superior -->
      <div class="absolute top-0 left-0 right-0 h-40 bg-gradient-to-b from-accent/30 to-transparent opacity-30 blur-3xl"></div>
      
      <!-- Formas decorativas orgánicas con diseño ultra-moderno 2025+ -->
      <div class="absolute -top-20 left-[5%] w-[32rem] h-[32rem] rounded-[40%_60%_70%_30%/40%_50%_60%_50%] bg-white/5 backdrop-blur-3xl animate-float border border-white/10 rotate-12 shadow-[0_0_40px_rgba(255,255,255,0.1)]"></div>
      <div class="absolute -bottom-40 right-[5%] w-[38rem] h-[38rem] rounded-[60%_40%_30%_70%/60%_30%_70%_40%] bg-accent/5 backdrop-blur-2xl animate-pulse-slow border border-accent/10 -rotate-12 shadow-[0_0_50px_rgba(0,224,255,0.15)]"></div>
      <div class="absolute top-[35%] right-[15%] w-[22rem] h-[22rem] rounded-[40%_60%_50%_50%/40%_50%_50%_60%] bg-secondary/5 backdrop-blur-xl animate-float border border-secondary/10 shadow-[0_0_30px_rgba(0,163,255,0.1)]" style="animation-delay: 2s;"></div>
      <div class="absolute top-[20%] left-[20%] w-[18rem] h-[18rem] rounded-[50%_50%_40%_60%/50%_40%_60%_50%] bg-primary/5 backdrop-blur-xl animate-float border border-primary/10 shadow-[0_0_30px_rgba(0,98,211,0.1)]" style="animation-delay: 3s;"></div>
      
      <!-- Partículas flotantes adicionales -->
      <div class="absolute top-[60%] left-[10%] w-8 h-8 rounded-full bg-white/10 backdrop-blur-md animate-float border border-white/20" style="animation-delay: 1.5s;"></div>
      <div class="absolute top-[15%] right-[25%] w-6 h-6 rounded-full bg-accent/10 backdrop-blur-md animate-float border border-accent/20" style="animation-delay: 2.5s;"></div>
      <div class="absolute top-[75%] right-[15%] w-10 h-10 rounded-full bg-secondary/10 backdrop-blur-md animate-float border border-secondary/20" style="animation-delay: 3.5s;"></div>
    
    <!-- Contenido del hero con diseño ultra-moderno 2025+ -->
    <div class="container mx-auto px-4 relative z-10 text-center py-20">
      <!-- Elemento decorativo superior con efecto de brillo mejorado -->
      <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-48 h-1.5 bg-gradient-to-r from-accent via-secondary to-accent rounded-full opacity-80 animate-pulse-slow shadow-[0_0_15px_rgba(0,224,255,0.5)]"></div>
      
      <Animation animation="fade-down" duration={800}>
        <!-- Insignia de tecnología 2025+ -->
        <div class="inline-block mb-6">
          <span class="inline-flex items-center px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-xl border border-white/20 text-white/90 text-sm font-medium shadow-[0_0_20px_rgba(255,255,255,0.15)]">
            <span class="w-2 h-2 bg-accent rounded-full mr-2 animate-pulse"></span>
            Tecnología 2025+
          </span>
        </div>
        
        <h1 class="text-5xl md:text-6xl lg:text-9xl font-bold mb-8 text-white leading-tight tracking-tight">
          <span class="relative inline-block">
            Explora
          </span> 
          <br class="hidden md:block"> 
          <span class="bg-gradient-to-r from-accent via-white to-secondary text-transparent bg-clip-text drop-shadow-[0_5px_20px_rgba(255,255,255,0.2)]">el Malecón</span>
        </h1>
      </Animation>
      
      <Animation animation="fade-up" delay={300} duration={800}>
        <p class="text-xl md:text-2xl mb-14 text-white/95 max-w-3xl mx-auto leading-relaxed">
          Alquila nuestros <span class="font-semibold text-accent relative inline-block after:absolute after:w-full after:h-0.5 after:bg-accent/50 after:bottom-0 after:left-0 after:shadow-[0_0_10px_rgba(0,224,255,0.5)]">scooters eléctricos</span> y disfruta de un recorrido único con vistas espectaculares
        </p>
      </Animation>
      
      <!-- Indicador de scroll mejorado con animación avanzada -->
      <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 hidden md:flex flex-col items-center">
        <div class="w-7 h-12 border-2 border-white/40 rounded-full flex justify-center pt-1 backdrop-blur-sm relative overflow-hidden group shadow-[0_0_15px_rgba(255,255,255,0.1)]">
          <div class="w-1.5 h-1.5 bg-white rounded-full animate-bounce-slow relative z-10 shadow-[0_0_5px_rgba(255,255,255,0.5)]"></div>
          <div class="absolute inset-0 bg-gradient-to-b from-white/10 to-white/5 opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section con diseño ultra-moderno neomórfico 2025+ -->  
  <section class="section-padding relative overflow-hidden">
    <!-- Formas decorativas de fondo mejoradas con efecto de profundidad avanzado -->
    <div class="absolute -top-40 -right-40 w-[45rem] h-[45rem] rounded-[60%_40%_50%_50%/50%_60%_40%_50%] bg-gradient-radial from-light-blue to-transparent opacity-60 blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-[50rem] h-[50rem] rounded-[40%_60%_50%_50%/50%_40%_60%_50%] bg-gradient-radial from-accent/20 to-transparent opacity-60 blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full bg-gradient-conic from-primary/5 via-transparent to-secondary/5 opacity-30"></div>
    
    <!-- Malla de puntos decorativa sutil -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, rgba(0,98,211,0.4) 1px, transparent 1px); background-size: 30px 30px;"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <Animation>
        <div class="text-center mb-24">
          <div class="inline-flex items-center justify-center mb-5">
            <span class="inline-block text-sm font-semibold text-primary bg-primary/10 px-6 py-2.5 rounded-full backdrop-blur-md border border-primary/20 shadow-[0_0_15px_rgba(0,98,211,0.15)]">
              <span class="inline-flex items-center">
                <span class="w-1.5 h-1.5 bg-primary rounded-full mr-2 animate-pulse"></span>
                CARACTERÍSTICAS
              </span>
            </div>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold gradient-text mb-8">Experiencia de Movilidad Futurista</h2>
            <p class="text-gray-600 max-w-3xl mx-auto mb-16">Nuestros scooters eléctricos combinan tecnología de vanguardia con diseño ergonómico para ofrecerte la mejor experiencia de recorrido</p>
          </div>
        </Animation>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
          <Animation animation="fade-up" delay={200}>
            <div class="card-neomorphism p-8 hover-float relative overflow-hidden group">
              <!-- Elemento decorativo superior -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-primary/5 -mr-10 -mt-10 transition-all duration-500 group-hover:bg-primary/10"></div>
              
              <div class="relative z-10">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-secondary flex items-center justify-center mb-6 shadow-neon">
                  <i class='bx bx-tachometer text-3xl text-white'></i>
                </div>
                <h3 class="text-xl font-bold mb-4">Ultra Velocidad</h3>
                <p class="text-gray-600">Scooters con velocidad controlada de hasta 25 km/h para un recorrido seguro y emocionante por el Malecón.</p>
              </div>
            </div>
          </Animation>
          
          <Animation animation="fade-up" delay={400}>
            <div class="card-neomorphism p-8 hover-float relative overflow-hidden group">
              <!-- Elemento decorativo superior -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-secondary/5 -mr-10 -mt-10 transition-all duration-500 group-hover:bg-secondary/10"></div>
              
              <div class="relative z-10">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-secondary to-accent flex items-center justify-center mb-6 shadow-neon">
                  <i class='bx bx-battery text-3xl text-white'></i>
                </div>
                <h3 class="text-xl font-bold mb-4">Batería Duradera</h3>
                <p class="text-gray-600">Autonomía garantizada con baterías de última generación que aseguran un recorrido completo sin interrupciones.</p>
              </div>
            </div>
          </Animation>
          
          <Animation animation="fade-up" delay={600}>
            <div class="card-neomorphism p-8 hover-float relative overflow-hidden group">
              <!-- Elemento decorativo superior -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-dark-blue/5 -mr-10 -mt-10 transition-all duration-500 group-hover:bg-dark-blue/10"></div>
              
              <div class="relative z-10">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-dark-blue to-primary flex items-center justify-center mb-6 shadow-neon">
                  <i class='bx bx-shield-quarter text-3xl text-white'></i>
                </div>
                <h3 class="text-xl font-bold mb-4">Máxima Seguridad</h3>
                <p class="text-gray-600">Equipados con sistemas de frenado de precisión y luces LED para mayor visibilidad durante todo el recorrido.</p>
              </div>
            </div>
          </Animation>
          
          <Animation animation="fade-up" delay={300}>
            <div class="card-neomorphism p-8 hover-float relative overflow-hidden group">
              <!-- Elemento decorativo superior -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-accent/5 -mr-10 -mt-10 transition-all duration-500 group-hover:bg-accent/10"></div>
              
              <div class="relative z-10">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-accent to-secondary flex items-center justify-center mb-6 shadow-neon">
                  <i class='bx bx-map-alt text-3xl text-white'></i>
                </div>
                <h3 class="text-xl font-bold mb-4">Rutas Escénicas</h3>
                <p class="text-gray-600">Recorridos diseñados para disfrutar de las mejores vistas y puntos de interés a lo largo del Malecón.</p>
              </div>
            </div>
          </Animation>
          
          <Animation animation="fade-up" delay={500}>
            <div class="card-neomorphism p-8 hover-float relative overflow-hidden group">
              <!-- Elemento decorativo superior -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-primary/5 -mr-10 -mt-10 transition-all duration-500 group-hover:bg-primary/10"></div>
              
              <div class="relative z-10">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-dark-blue flex items-center justify-center mb-6 shadow-neon">
                  <i class='bx bx-support text-3xl text-white'></i>
                </div>
                <h3 class="text-xl font-bold mb-4">Asistencia Continua</h3>
                <p class="text-gray-600">Personal capacitado disponible en puntos estratégicos para brindarte ayuda cuando lo necesites.</p>
              </div>
            </div>
          </Animation>
        </div>
      </div>
    </section>

  <!-- Pricing Section con diseño glassmórfico -->  
  <section class="section-padding bg-gradient-to-b from-white to-light-blue relative overflow-hidden">
    <!-- Formas decorativas de fondo -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-10">
      <div class="absolute top-10 left-[20%] w-72 h-72 rounded-full bg-primary blur-3xl"></div>
      <div class="absolute bottom-10 right-[20%] w-96 h-96 rounded-full bg-secondary blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <Animation>
        <div class="text-center mb-16">
          <span class="inline-block text-sm font-semibold text-primary bg-primary/10 px-4 py-1.5 rounded-full mb-4">PRECIOS</span>
          <h2 class="text-3xl md:text-4xl font-bold gradient-text mb-6">Planes a tu Medida</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">Elige el plan que mejor se adapte a tus necesidades y disfruta de la mejor experiencia en el Malecón</p>
        </div>
      </Animation>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10">
        <Animation animation="fade-right" delay={200}>
          <div class="card-glass p-1 rounded-3xl overflow-hidden hover-float">
            <div class="bg-gradient-to-br from-primary/90 to-primary/70 backdrop-blur-lg text-white p-8 rounded-t-3xl relative overflow-hidden">
              <!-- Formas decorativas en la cabecera -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-white/10 -mr-10 -mt-10"></div>
              <div class="absolute bottom-0 left-0 w-16 h-16 rounded-full bg-white/10 -ml-8 -mb-8"></div>
              
              <h3 class="text-2xl font-bold relative z-10">30 Minutos</h3>
              <div class="text-5xl font-bold mt-4 flex items-end relative z-10">
                <span class="text-2xl mr-1">$</span>25.000
                <span class="text-base font-normal ml-2 self-end mb-1">COP</span>
              </div>
            </div>
            
            <div class="bg-white/80 backdrop-blur-sm p-8 rounded-b-3xl">
              <ul class="space-y-4 mb-8">
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Recorrido básico por el Malecón</span>
                </li>
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Ideal para principiantes y visitas rápidas</span>
                </li>
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Incluye casco de seguridad y guia de puntos turisticos</span>
                </li>
              </ul>
              <a href="/contacto" class="block w-full py-3 px-6 rounded-full bg-gradient-to-r from-primary to-primary text-white text-center font-medium hover:shadow-lg transition-all duration-300 hover:from-primary hover:to-secondary">Reservar Ahora</a>
            </div>
          </div>
        </Animation>
        
        <Animation animation="fade-up" delay={400}>
          <div class="card-glass p-1 rounded-3xl overflow-hidden hover-float scale-105 relative z-20">
            <!-- Etiqueta de popular -->
            <div class="absolute -top-4 -right-4 z-30">
              <div class="bg-gradient-to-r from-secondary to-accent text-white text-xs font-bold py-1.5 px-4 rounded-full shadow-lg transform rotate-12">
                POPULAR
              </div>
            </div>
            
            <div class="bg-gradient-to-br from-secondary/90 to-secondary/70 backdrop-blur-lg text-white p-8 rounded-t-3xl relative overflow-hidden">
              <!-- Formas decorativas en la cabecera -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-white/10 -mr-10 -mt-10"></div>
              <div class="absolute bottom-0 left-0 w-16 h-16 rounded-full bg-white/10 -ml-8 -mb-8"></div>
              
              <h3 class="text-2xl font-bold relative z-10">40 Minutos</h3>
              <div class="text-5xl font-bold mt-4 flex items-end relative z-10">
                <span class="text-2xl mr-1">$</span>30.000
                <span class="text-base font-normal ml-2 self-end mb-1">COP</span>
              </div>
            </div>
            
            <div class="bg-white/80 backdrop-blur-sm p-8 rounded-b-3xl">
              <ul class="space-y-4 mb-8">
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Recorrido intermedio con más puntos de interés</span>
                </li>
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Tiempo suficiente para disfrutar del paisaje</span>
                </li>
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Casco de seguridad y guia de puntos turisticos</span>
                </li>
              </ul>
              <a href="/contacto" class="block w-full py-3 px-6 rounded-full bg-gradient-to-r from-secondary to-secondary text-white text-center font-medium hover:shadow-lg transition-all duration-300 hover:from-secondary hover:to-accent">Reservar Ahora</a>
            </div>
          </div>
        </Animation>
        
        <Animation animation="fade-left" delay={600}>
          <div class="card-glass p-1 rounded-3xl overflow-hidden hover-float">
            <div class="bg-gradient-to-br from-dark-blue/90 to-dark-blue/70 backdrop-blur-lg text-white p-8 rounded-t-3xl relative overflow-hidden">
              <!-- Formas decorativas en la cabecera -->
              <div class="absolute top-0 right-0 w-24 h-24 rounded-full bg-white/10 -mr-10 -mt-10"></div>
              <div class="absolute bottom-0 left-0 w-16 h-16 rounded-full bg-white/10 -ml-8 -mb-8"></div>
              
              <h3 class="text-2xl font-bold relative z-10">1 Hora</h3>
              <div class="text-5xl font-bold mt-4 flex items-end relative z-10">
                <span class="text-2xl mr-1">$</span>35.000
                <span class="text-base font-normal ml-2 self-end mb-1">COP</span>
              </div>
            </div>
            
            <div class="bg-white/80 backdrop-blur-sm p-8 rounded-b-3xl">
              <ul class="space-y-4 mb-8">
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Recorrido completo por todo el Malecón</span>
                </li>
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Experiencia premium con paradas fotográficas</span>
                </li>
                <li class="flex items-start">
                  <i class='bx bx-check-circle text-green-500 text-xl mr-3 mt-0.5'></i>
                  <span>Incluye casco y guía de puntos turísticos</span>
                </li>
              </ul>
              <a href="/contacto" class="block w-full py-3 px-6 rounded-full bg-gradient-to-r from-dark-blue to-dark-blue text-white text-center font-medium hover:shadow-lg transition-all duration-300 hover:from-dark-blue hover:to-primary">Reservar Ahora</a>
            </div>
          </div>
        </Animation>
      </div>
      
      <!-- Nota adicional -->
      <div class="text-center mt-12 text-gray-600">
        <p>Todos nuestros planes incluyen una breve capacitación sobre el uso del scooter y medidas de seguridad</p>
        <a href="/precios" class="inline-flex items-center text-primary font-medium mt-4 hover:underline">
          <span>Ver detalles completos</span>
          <i class='bx bx-right-arrow-alt ml-1'></i>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 bg-light-blue">
    <div class="container mx-auto">
      <Animation>
        <h2 class="text-3xl font-bold text-center mb-12">Lo que dicen nuestros clientes</h2>
      </Animation>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <Animation animation="fade-up" delay={200}>
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
            <div class="flex items-center mb-4">
              <div class="text-yellow-400 flex">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
